<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.softgarden.catchdolls.ui.userCenter.myDolls.ConfirmAddressActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_radius_white_10dp"
            app:layoutManager="LinearLayoutManager" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_radius_white_10dp"
            android:padding="10dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvName"
                style="@style/BlackText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvPhone"
                style="@style/BlackText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/tvModifyAddress"
                android:layout_toRightOf="@+id/tvName"
                android:text="15012345678" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvAddress"
                style="@style/GrayDarkText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvName"
                android:layout_toLeftOf="@+id/tvModifyAddress" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvModifyAddress"
                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="10dp"
                android:text="@string/modify_address" />

        </RelativeLayout>

        <EditText
            android:id="@+id/edtRemark"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:height="40dp"
            android:background="@drawable/shape_radius_white_10dp"
            android:gravity="center"
            android:hint="添加备注" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_radius_white_10dp"
            android:divider="@drawable/shape_line_ver"
            android:orientation="vertical"
            android:showDividers="middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/GrayDarkText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/game_id" />

                <android.support.v7.widget.AppCompatTextView
                    style="@style/BlackText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="1" />

            </LinearLayout>

            <android.support.v7.widget.AppCompatTextView
                style="@style/GrayDarkText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="当前我的娃娃币：33" />
        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnEnsureDelivery"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:text="@string/ensure_delivery" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
