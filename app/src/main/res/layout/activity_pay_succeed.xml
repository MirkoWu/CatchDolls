<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteLight"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.softgarden.catchdolls.ui.userCenter.recharge.PaySucceedActivity">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:src="@mipmap/pay_succeed" />

    <android.support.v7.widget.AppCompatTextView
        style="@style/PinkText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="恭喜您，支付成功！"
        android:textSize="@dimen/font_18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="20dp">

        <android.support.v7.widget.AppCompatTextView
            style="@style/BlackText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="充值金额"
            android:textSize="@dimen/font_16" />

        <android.support.v7.widget.AppCompatTextView
            style="@style/PinkText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="100元"
            android:textSize="@dimen/font_16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="20dp">

        <android.support.v7.widget.AppCompatTextView
            style="@style/BlackText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="娃娃币"
            android:textSize="@dimen/font_16" />

        <android.support.v7.widget.AppCompatTextView
            style="@style/PinkText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="2000娃娃币"
            android:textSize="@dimen/font_16" />

    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnBackHome"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/shape_radius_pink3_10dp"
        android:text="@string/back_home" />
</LinearLayout>
