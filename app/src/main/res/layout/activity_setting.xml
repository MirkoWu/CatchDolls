<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteGray"
    android:orientation="vertical"
    tools:context="com.softgarden.catchdolls.ui.more.SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:divider="@drawable/shape_line_ver"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:showDividers="middle">

        <LinearLayout
            android:id="@+id/llClearCache"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:padding="5dp">

            <TextView
                style="@style/SettingItemStyle"
                android:text="清除缓存" />

            <TextView
                style="@style/SettingItemStyle"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/gray_right_arrow"
                android:gravity="right"
                android:text="3.36M"
                android:textColor="@color/pinkText" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp">

            <TextView
                style="@style/SettingItemStyle"
                android:text="背景音乐" />

            <com.softgarden.catchdolls.widget.switchbutton.SwitchButton
                android:id="@+id/sbBgMusic"
                style="@style/SwitchButtonStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp">

            <TextView
                style="@style/SettingItemStyle"
                android:text="背景音效" />

            <com.softgarden.catchdolls.widget.switchbutton.SwitchButton
                android:id="@+id/sbBgSoundEffect"
                style="@style/SwitchButtonStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp">

            <TextView
                style="@style/SettingItemStyle"
                android:text="游戏中录屏功能" />

            <com.softgarden.catchdolls.widget.switchbutton.SwitchButton
                android:id="@+id/sbVideoRecode"
                style="@style/SwitchButtonStyle" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:divider="@drawable/shape_line_ver"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp">

            <TextView
                style="@style/SettingItemStyle"
                android:text="相机权限" />

            <com.softgarden.catchdolls.widget.switchbutton.SwitchButton
                android:id="@+id/sbCameraPermission"
                style="@style/SwitchButtonStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp">

            <TextView
                style="@style/SettingItemStyle"
                android:text="相册权限" />

            <com.softgarden.catchdolls.widget.switchbutton.SwitchButton
                android:id="@+id/sbAlbumPermission"
                style="@style/SwitchButtonStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp">

            <TextView
                style="@style/SettingItemStyle"
                android:text="麦克风权限" />

            <com.softgarden.catchdolls.widget.switchbutton.SwitchButton
                android:id="@+id/sbMicrophonePermission"
                style="@style/SwitchButtonStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp">

            <TextView
                style="@style/SettingItemStyle"
                android:text="通知权限" />

            <com.softgarden.catchdolls.widget.switchbutton.SwitchButton
                android:id="@+id/sbNoticePermission"
                style="@style/SwitchButtonStyle" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
