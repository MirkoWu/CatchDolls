<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteGray"
    android:divider="@drawable/shape_line_ver"
    android:orientation="vertical"
    android:showDividers="middle"
    tools:context="com.softgarden.catchdolls.ui.userCenter.myCoins.MyCoinsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            style="@style/PinkText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="100"
            android:textSize="@dimen/font_40"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatTextView
            style="@style/GrayDarkText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/my_coin"
            android:textSize="@dimen/font_14" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnRecharge"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_radius_pink_1024dp"
            android:paddingHorizontal="80dp"
            android:text="@string/recharge"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/mTabLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        app:tl_divider_color="@color/grayLine"
        app:tl_divider_padding="5dp"
        app:tl_divider_width="1px"
        app:tl_indicator_color="@color/pink"
        app:tl_indicator_width_equal_title="true"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="@color/blackText"
        app:tl_textUnselectColor="@color/grayLightText"
        app:tl_textsize="@dimen/font_15" />

    <android.support.v4.view.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />
</LinearLayout>
