<resources>

    <style name="WhiteText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_15</item>
    </style>

    <style name="PinkText">
        <item name="android:textColor">@color/pinkText</item>
        <item name="android:textSize">@dimen/font_15</item>
    </style>

    <style name="BlackText">
        <item name="android:textColor">@color/blackText</item>
        <item name="android:textSize">@dimen/font_15</item>
    </style>

    <style name="GrayDarkText">
        <item name="android:textColor">@color/grayDarkText</item>
        <item name="android:textSize">@dimen/font_15</item>
    </style>

    <style name="GrayLightText">
        <item name="android:textColor">@color/grayLightText</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="EditTextStyle" parent="BlackText">
        <item name="android:textColorHint">@color/grayLightText</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:background">@drawable/shape_stroke1dp_pink_white_5dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="ButtonStyle" parent="WhiteText">
        <item name="android:background">@drawable/shape_radius_pinkdark_5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="VerLineStyle">
        <item name="android:background">@color/grayLine</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1px</item>
    </style>

    <style name="HorLineStyle">
        <item name="android:background">@color/grayLine</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="MoreItemStyle" parent="BlackText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:drawableRight">@mipmap/pink_right_arrow</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>


    <style name="MessageItemStyle" parent="BlackText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableRight">@mipmap/gray_right_arrow</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="kswThumbHeight">30dp</item>
        <item name="kswThumbWidth">30dp</item>
        <item name="kswAnimationDuration">0</item>
        <item name="kswBackDrawable">@drawable/shape_switchbutton_drawable</item>
        <item name="kswBackMeasureRatio">1.4</item>
        <item name="kswThumbDrawable">@drawable/select_switchbutton_thumb</item>
        <item name="kswThumbMarginBottom">-8dp</item>
        <item name="kswThumbMarginLeft">-5dp</item>
        <item name="kswThumbMarginRight">-5dp</item>
        <item name="kswThumbMarginTop">-2.5dp</item>
    </style>

    <style name="SettingItemStyle" parent="BlackText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="UserItemStyle" parent="MoreItemStyle">
        <item name="android:background">@drawable/shape_radius_white_10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
</resources>
